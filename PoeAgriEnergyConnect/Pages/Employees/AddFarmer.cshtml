@page
@model PoeAgriEnergyConnect.Pages.Employees.AddFarmerModel
@{
    ViewData["Title"] = "Add Farmers";
}

<h2>@ViewData["Title"]</h2>



<form method="post">
    <div class="form-group">
        <label asp-for="Farmer.Name" class="control-label"></label>
        <input asp-for="Farmer.Name" class="form-control" />
        <span asp-validation-for="Farmer.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Farmer.Address" class="control-label"></label>
        <input asp-for="Farmer.Address" class="form-control" />
        <span asp-validation-for="Farmer.Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Farmer.PhoneNumber" class="control-label"></label>
        <input asp-for="Farmer.PhoneNumber" class="form-control" />
        <span asp-validation-for="Farmer.PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Farmer.Email" class="control-label"></label>
        <input asp-for="Farmer.Email" class="form-control" />
        <span asp-validation-for="Farmer.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Farmer.Password" class="control-label"></label>
        <input asp-for="Farmer.Password" class="form-control" />
        <span asp-validation-for="Farmer.Password" class="text-danger"></span>
    </div>
    <div class="form-group  mb-3">
        <label asp-for="Farmer.UserType" class="control-label"></label>
        <select asp-for="Farmer.UserType" class="form-control">
            <option value="Farmer">Farmer</option>
            <option value="Employee">Employee</option>
        </select>
        <span asp-validation-for="Farmer.UserType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Add Farmer</button>
        <a asp-page="/Employees/FarmerList" class="btn btn-secondary">View Farmer List</a>
        <a asp-page="/Account/Login" class="btn btn-secondary">Back</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}